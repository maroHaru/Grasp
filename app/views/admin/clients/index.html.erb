<div class="container mt-1">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-8 mb-5">
    <%= form_with model: @client, url: '/admin/clients/', method: :post do |f| %>
    <table>
      <thead>
        <tr>
          <th height="50", class="h3">Client 追加</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= f.text_field :name, size: 52, class: "form-control" %></td>
          <td width="30"></td>
          <td><%= f.submit '新規登録', class: "btn btn-md btn-success" %></td>
        </tr>
      </tbody>
    </table>
    <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <table class="table table-hover">
        <thead>
          <tr>
            <th height="50", class="h3">Client</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @clients.each do |client| %>
            <tr>
              <td><%= client.name %></td>
              <td><%= link_to "編集する", edit_admin_client_path(client.id), class: "btn btn-md btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    </div class="col-md-2"></div>
  </div>
  <div class="row">
    <div class="col-md-5">
    </div>
    <div class="col-md-5 mx-auto">
      <%= paginate @clients %>
    </div>
  </div>
</div>