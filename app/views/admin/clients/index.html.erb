<div class="container mt-5">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-5">
      <h5 class="mb-4">Client一覧・追加</h5>
　　　<%= form_with model: @client, url: '/admin/clients/', method: :post do |f| %>
        <b class="mb-2">Client名</b>
          <div class="col-md-5 mb-5">
          <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="col-md-3 text-center">
          <%= f.submit '新規登録', class: "btn btn-md btn-success" %>
        </div>
      <% end %>

      <div class="col-md-8 offset-md-1">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Client</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @clients.each do |client| %>
            <tr>
              <td><%= client.name %></td>
              <td><%= link_to "編集する", edit_admin_client_path(client.id), class: "btn btn-md btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    </div>
    </div class="col-md-2"></div>
  </div>
</div>