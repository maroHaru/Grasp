<div class="container">
  <div class="row">
    <div class="col-md-5 text-center">
      <h2>Sign up</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 mx-auto mt-4">
      <%= form_with model: @worker, url: worker_registration_path do |f| %>
        <%= render "worker/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :name %><br />
          <%= f.text_field :name %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions mt-3 mb-5">
          <%= f.submit "Sign up", class: "btn btn-info" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 mx-auto mt-4">
      <h5>既に登録済みの方</h5>
    </div>
    <div class="col-lg-10 mb-5 text-center">
      <%= link_to "こちら ", new_worker_session_path %>からログインしてください。
    </div>
  </div>
</div>

