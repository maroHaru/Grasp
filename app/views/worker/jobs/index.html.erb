<div class="container mt-1">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8 mb-5">
      <div class="row">
      <table>
        <thead>
          <tr>
            <th height="60", class="h4">業務内容 追加</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
  　　  　<%= form_with model: @job, url: '/jobs/', method: :post do |f| %>
    　　　  <tr>
    　　　    <td><%= f.text_field :description, size: 50, class: "form-control" %></td>
    　　　    <td width="30"></td>
    　　　    <td><%= f.submit '新規追加', class: "btn btn-md btn-success" %></td>
    　　　  </tr>
        <% end %>
        </tbody>
      </table>
      </div>
      <div class="row mt-5">
      <table class="table table-hover">
        <thead>
          <tr>
            <th class="h5">業務内容</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @jobs.each do |job| %>
            <tr>
              <td><%= job.description %></td>
              <td><%= link_to "編集する", edit_job_path(job.id), class: "btn btn-md btn-success" %></td>
              <td><%= link_to "削除する", job_path(job.id), method: :delete, class: "btn btn-sm btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
    </div class="col-md-2"></div>
  </div>
</div>