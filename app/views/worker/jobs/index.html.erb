<div class="container mt-1">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8 mb-5">
      <div class="row">
      <%= form_with model: @job, url: '/jobs/', method: :post do |f| %>
      <table>
        <thead>
          <tr>
            <th height="60", class="h4">
              <% if @job.errors.any? %>
                <div class="alert alert-danger" role="alert">業務内容を入力してください</div>
              <% end %>
              業務内容 追加
            </th>
            <th></th>
            <th></th>
          </tr>
        </thead>
  　　　　  <tbody>
    　　　  <tr>
    　　　    <td><%= f.text_field :description, size: 50, class: "form-control" %></td>
    　　　    <td width="30"></td>
    　　　    <td><%= f.submit '追加', class: "btn btn-md btn-info" %></td>
    　　　  </tr>
        </tbody>
      </table>
      <% end %>
      </div>
      <div class="row mt-5">
      <table class="table table-hover">
        <thead>
          <tr>
            <th class="h5">業務内容</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @jobs.each do |job| %>
            <tr>
              <td><%= job.description %></td>
              <td><%= link_to "編集する", edit_job_path(job.id), class: "btn btn-md btn-success" %></td>
              <td><%= link_to "削除する", job_path(job.id), method: :delete, "data-confirm" => "本当に削除されますか？", class: "btn btn-sm btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
    </div class="col-md-2"></div>
  </div>
</div>