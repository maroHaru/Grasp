<div class="container mt-5">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-5">
      <h5 class="mb-4">業務内容一覧・追加!</h5>

　　　<%= form_with model: @job, url: '/jobs/', method: :post do |f| %>
        <b class="mb-2">業務内容</b>
        <div class="col-md-5 mb-5">
          <%= f.text_field :description, class: "form-control" %>
        </div>
        <div class="col-md-3 text-center">
          <%= f.submit '新規登録', class: "btn btn-md btn-success" %>
        </div>
      <% end %>

      <div class="col-md-8 offset-md-1">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>業務内容</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @jobs.each do |job| %>
            <tr>
              <td><%= job.description %></td>
              <td><%= link_to "編集する", edit_job_path(job.id), class: "btn btn-md btn-success" %>
                  <%= link_to "削除する", job_path(job.id), method: :delete, class: "btn btn-sm btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
    </div class="col-md-2"></div>
  </div>
</div>