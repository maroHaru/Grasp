<div class="container">
  <div class="row mb-5">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
      <span class="bg-warning px-2 text-ligft">業務開始</span>
      <%= form_with model: @timecard, url: timecards_path, method: :post do |f| %>
        <%= f.label :client, "Clientを選択" %></br>
        <%= f.select :client_id, options_from_collection_for_select(Client.all, :id, :name), {include_blank: '---未選択---'} %></br>
        <%= f.label :job, "業務内容を選択" %></br>
        <%= f.select :job_id, options_from_collection_for_select(current_worker.jobs, :id, :description), {include_blank: '---未選択---'} %></br>
        <%= f.label :to_do, "To Doリストから選択" %></br>
        <%= f.select :to_do_id, options_from_collection_for_select(current_worker.to_dos.where(is_completed: false), :id, :name), {include_blank: '---未選択---'} %></br>
        <%= f.label :memo, "メモ" %></br>
        <%= f.text_area :memo %></br>
        <%= f.submit '開始', class: "btn btn-md btn-primary" %>
      <% end %>
    </div>
    <div class="col-md-4">
    </div>
  </div>
</div>
